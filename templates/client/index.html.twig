            <!-- Pagination -->
<nav class="flex justify-end mt-4">
    <ul class="flex space-x-2">
        <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
            <a class="page-link" href="{{ page > 1 ? '?page=' ~ (page - 1) : '#' }}" aria-label="Previous">
                &laquo;
            </a>
        </li>
        {% for i in 1..maxPage %}
            <li class="page-item {{ i == page ? 'active' : '' }}">
                <a class="page-link" href="?page={{ i }}">{{ i }}</a>
            </li>
        {% endfor %}
        <li class="page-item {{ page == maxPage ? 'disabled' : '' }}">
            <a class="page-link" href="{{ page < maxPage ? '?page=' ~ (page + 1) : '#' }}" aria-label="Next">
                &raquo;
            </a>
        </li>
    </ul>
</nav>

