<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenue !{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>
</head>
<body class="flex min-h-screen bg-gray-200 font-sans">
    <!-- Sidebar -->
    <nav class="w-64 bg-gray-800 text-white p-6">
        <h2 class="text-xl font-semibold mb-4">Menu</h2>
        <ul class="space-y-4">
            <li>
                <a href="{{ path('clients.index') }}" class="block p-2 hover:bg-gray-700 rounded">Clients</a>
            </li>
            <li>
                <a href="{{ path('articles.index') }}" class="block p-2 hover:bg-gray-700 rounded">Articles</a>
            </li>
            <li>
                <a href="#" class="block p-2 hover:bg-gray-700 rounded">Link</a>
            </li>
            <li>
                <div class="relative">
                    <button id="dropdownButton" class="w-full text-left p-2 hover:bg-gray-700 rounded focus:outline-none">
                        Dropdown
                    </button>
                    <ul id="dropdownMenu" class="mt-2 ml-2 space-y-2 hidden">
                        <li><a href="#" class="block p-2 hover:bg-gray-700 rounded">Action 1</a></li>
                        <li><a href="#" class="block p-2 hover:bg-gray-700 rounded">Action 2</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="flex-1 p-8">
        {% block body %}
        <header class="bg-white shadow p-4 mb-8">
            <h1 class="text-2xl font-bold">Gestion des Clients</h1>
        </header>
        
        <main>
            {% block main %}{% endblock %}
        </main>
        {% endblock %}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dropdownButton = document.getElementById('dropdownButton');
            const dropdownMenu = document.getElementById('dropdownMenu');

            dropdownButton.addEventListener('click', function () {
                dropdownMenu.classList.toggle('hidden');
            });
        });
    </script>
</body>
</html>

